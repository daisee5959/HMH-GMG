<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>í•˜ë©´ í•´?</title>
  <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
  <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body {
      margin: 0;
      padding: 0;
    }
  </style>
</head>
<body>
  <div id="root"></div>
  
  <script type="text/babel">
    const { useState } = React;

    function IdealWorldCup() {
      // ê¸°ë³¸ ë°ì´í„°
      const defaultItems = [
        { id: 1, name: 'ì¸ì›', emoji: '', color: 'from-slate-800 to-slate-950' },
        { id: 2, name: 'ìºëŸ´ lo-fi', emoji: '', color: 'from-purple-900 to-indigo-950' },
        { id: 3, name: 'ì£¼í† í”¼ì•„', emoji: '', color: 'from-violet-900 to-purple-950' },
        { id: 4, name: 'ìŠ¤íƒ€ë“€..ë°¸ë¦¬', emoji: '', color: 'from-emerald-900 to-teal-950' },
        { id: 5, name: 'ìž‡ í…Œì´í¬ íˆ¬', emoji: '', color: 'from-blue-900 to-indigo-950' },
        { id: 6, name: 'ì™œ ì´ë ‡ê²Œ ê°€ì •ì ì¸ ì²™ì„ í•´?', emoji: '', color: 'from-gray-800 to-gray-950' },
        { id: 7, name: 'í¬ë¼ìž„ì”¬ ì œë¡œ', emoji: '', color: 'from-zinc-900 to-black' },
        { id: 8, name: 'í”Œë¼í† ë‹‰ ëŸ¬ë¸Œ', emoji: '', color: 'from-rose-950 to-pink-950' },
      ];

      const [stage, setStage] = useState('intro');
      const [totalRound, setTotalRound] = useState(8);
      const [currentRound, setCurrentRound] = useState(8);
      const [matchNumber, setMatchNumber] = useState(1);
      const [items, setItems] = useState([]);
      const [currentPair, setCurrentPair] = useState([]);
      const [winners, setWinners] = useState([]);
      const [finalWinner, setFinalWinner] = useState(null);

      const shuffleArray = (array) => {
        const shuffled = [...array];
        for (let i = shuffled.length - 1; i > 0; i--) {
          const j = Math.floor(Math.random() * (i + 1));
          [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
        }
        return shuffled;
      };

      const startGame = (round) => {
        const selectedItems = shuffleArray(defaultItems).slice(0, round);
        setTotalRound(round);
        setCurrentRound(round);
        setItems(selectedItems);
        setMatchNumber(1);
        setWinners([]);
        setCurrentPair([selectedItems[0], selectedItems[1]]);
        setStage('playing');
      };

      const handleSelect = (selected) => {
        const newWinners = [...winners, selected];
        const remainingItems = items.slice(2);

        if (remainingItems.length > 0) {
          setWinners(newWinners);
          setItems(remainingItems);
          setCurrentPair([remainingItems[0], remainingItems[1]]);
          setMatchNumber(matchNumber + 1);
        } else if (newWinners.length > 1) {
          const nextRound = currentRound / 2;
          setCurrentRound(nextRound);
          setItems(newWinners);
          setCurrentPair([newWinners[0], newWinners[1]]);
          setWinners([]);
          setMatchNumber(1);
        } else {
          setFinalWinner(newWinners[0]);
          setStage('result');
        }
      };

      const getRoundName = (round) => {
        switch(round) {
          case 32: return '32ê°•';
          case 16: return '16ê°•';
          case 8: return '8ê°•';
          case 4: return 'ì¤€ì¤€ê²°ìŠ¹';
          case 2: return 'ê²°ìŠ¹';
          default: return `${round}ê°•`;
        }
      };

      return (
        <div className="min-h-screen bg-gradient-to-br from-gray-950 via-purple-950 to-black flex items-center justify-center p-4">
          <div className="w-full max-w-6xl">
            {stage === 'intro' && (
              <div className="bg-gradient-to-br from-gray-900 to-black rounded-3xl shadow-2xl p-12 text-center border border-purple-800">
                <h1 className="text-5xl font-bold text-purple-300 mb-12">
                  í•˜ë©´ í•´?
                </h1>
                
                <button
                  onClick={() => startGame(8)}
                  className="bg-gradient-to-br from-purple-900 to-indigo-950 hover:from-purple-800 hover:to-indigo-900 text-purple-100 font-bold py-6 px-12 rounded-2xl shadow-lg transform hover:scale-105 transition-all border border-purple-700 text-xl"
                >
                  ì‹œìž‘í•˜ê¸°
                </button>
              </div>
            )}

            {stage === 'playing' && (
              <div>
                <div className="bg-gradient-to-br from-gray-900 to-black rounded-2xl shadow-lg p-6 mb-6 border border-purple-800">
                  <div className="flex justify-between items-center">
                    <div className="text-2xl font-bold text-purple-300">
                      {getRoundName(currentRound)}
                    </div>
                    <div className="text-lg text-gray-400">
                      {matchNumber} / {currentRound / 2}
                    </div>
                  </div>
                  <div className="mt-2 bg-gray-800 rounded-full h-2">
                    <div 
                      className="bg-gradient-to-r from-purple-600 to-indigo-600 h-2 rounded-full transition-all"
                      style={{ width: `${(matchNumber / (currentRound / 2)) * 100}%` }}
                    ></div>
                  </div>
                </div>

                <div className="grid md:grid-cols-2 gap-6">
                  {currentPair.map((item) => (
                    <button
                      key={item.id}
                      onClick={() => handleSelect(item)}
                      className="group relative bg-gradient-to-br from-gray-900 to-black rounded-3xl shadow-xl overflow-hidden transform hover:scale-105 transition-all duration-300 border border-purple-700 hover:border-purple-500"
                    >
                      <div className={`bg-gradient-to-br ${item.color} p-16 flex flex-col items-center justify-center min-h-[400px]`}>
                        <div className="text-3xl font-bold text-white drop-shadow-lg text-center px-4">
                          {item.name}
                        </div>
                      </div>
                      <div className="absolute inset-0 bg-purple-500 opacity-0 group-hover:opacity-10 transition-opacity"></div>
                    </button>
                  ))}
                </div>

                <div className="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 pointer-events-none hidden md:block">
                  <div className="bg-gradient-to-br from-gray-900 to-black rounded-full w-20 h-20 flex items-center justify-center shadow-2xl border-2 border-purple-600">
                    <span className="text-2xl font-bold text-purple-300">VS</span>
                  </div>
                </div>
              </div>
            )}

            {stage === 'result' && finalWinner && (
              <div className="bg-gradient-to-br from-gray-900 to-black rounded-3xl shadow-2xl p-12 text-center border border-purple-800">
                <div className="text-6xl mb-6">ðŸ–¤</div>
                <h2 className="text-4xl font-bold text-purple-300 mb-8">
                  HMH GMG
                </h2>
                <div className={`bg-gradient-to-br ${finalWinner.color} rounded-3xl p-16 mb-8 border border-purple-700`}>
                  <div className="text-4xl font-bold text-white drop-shadow-lg">
                    {finalWinner.name}
                  </div>
                </div>
                <button
                  onClick={() => setStage('intro')}
                  className="bg-gradient-to-r from-purple-900 to-indigo-950 hover:from-purple-800 hover:to-indigo-900 text-purple-100 font-bold py-4 px-12 rounded-full shadow-lg transform hover:scale-105 transition-all text-lg border border-purple-700"
                >
                  ë‹¤ì‹œ í•˜ê¸°
                </button>
              </div>
            )}
          </div>
        </div>
      );
    }

    ReactDOM.render(<IdealWorldCup />, document.getElementById('root'));
  </script>
</body>
